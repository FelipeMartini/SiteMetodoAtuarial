# Auth.js Core
AUTH_SECRET=defina_um_segredo_forte
DATABASE_URL=sqlite:./prisma/db/dev.db

# Google OAuth
AUTH_GOOGLE_ID=
AUTH_GOOGLE_SECRET=

# GitHub OAuth
AUTH_GITHUB_ID=
AUTH_GITHUB_SECRET=

# Apple OAuth (todos necessários)
AUTH_APPLE_ID=
AUTH_APPLE_TEAM_ID=
AUTH_APPLE_KEY_ID=
