AUTH_APPLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nLINHAS\n-----END PRIVATE KEY-----"

# Twitter OAuth
AUTH_TWITTER_ID=
AUTH_TWITTER_SECRET=

# Microsoft Entra ID (ex Azure AD)
AUTH_MICROSOFT_ENTRA_ID_ID=
AUTH_MICROSOFT_ENTRA_ID_SECRET=
