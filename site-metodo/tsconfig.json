{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    // ...j√° existe 'strictNullChecks' acima, removido para evitar duplicidade
    "strictFunctionTypes": true,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true,
    "types": ["node", "react", "react-dom"],
    "baseUrl": ".",
    "paths": {
  "@/*": ["src/*"],
  "@core/*": ["src/@core/*"],
  "@/auth": ["auth.ts"],
  "@mui/styled-engine": ["node_modules/@mui/styled-engine-sc"],
  "@components/*": ["src/components/*"],
  "@libs/*": ["src/lib/*"],
  "@types/*": ["src/types/*"]
    }
  },
  "include": ["next-env.d.ts", ".next/types/**/*.ts", "types/**/*.d.ts", "**/*.ts", "**/*.tsx", "auth-abac-puro.old"],
  "exclude": ["node_modules", ".next", "build", "dist"]
}
