{
  // Desativa o formatador automático ao salvar arquivos
  "editor.formatOnSave": false,
  // Permite formatação manual via comando
  "editor.formatOnSaveMode": "modifications",
  // Opcional: desativa formatadores específicos (exemplo para Prettier)
  "[javascript]": {
    "editor.defaultFormatter": null
  },
  "[typescript]": {
    "editor.defaultFormatter": null
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": null
  },
  "[json]": {
    "editor.defaultFormatter": null
  },
  // Permite que o usuário escolha manualmente o formatador se desejar
  "editor.defaultFormatter": null,
  // Caminho padrão do terminal integrado ao abrir na pasta site-metodo
  // Configurações de performance para projetos Next.js
  "terminal.integrated.cwd": "${workspaceFolder}/site-metodo", // Define o diretório inicial do terminal integrado
  "files.exclude": { // Oculta arquivos/pastas do explorador de arquivos
    "**/node_modules": true,
    "**/.next": true,
    "**/build": true,
    "**/dist": true,
    "**/.git": true,
    "**/coverage": true
  },
  "files.watcherExclude": { // Exclui arquivos/pastas do watcher de arquivos (melhora performance)
    "**/node_modules/**": true,
    "**/.next/**": true,
    "**/build/**": true,
    "**/dist/**": true
  },
  "search.exclude": { // Exclui arquivos/pastas dos resultados de busca
    "**/node_modules": true,
    "**/.next": true,
    "**/build": true,
    "**/dist": true
  },
    "typescript.disableAutomaticTypeAcquisition": true, // Desativa aquisição automática de tipos do TypeScript
  "workbench.editor.revealIfOpen": false, // Não foca automaticamente o editor se o arquivo já estiver aberto
  "workbench.editor.enablePreviewFromQuickOpen": false, // Não abre arquivos em modo preview ao usar Quick Open
  "editor.minimap.enabled": false, // Desativa o minimapa lateral do editor
  "breadcrumbs.enabled": false, // Desativa a navegação por breadcrumbs
  "typescript.suggest.autoImports": false, // Desativa sugestões automáticas de importação no TypeScript
  "chat.tools.autoApprove": true, // Aprova automaticamente sugestões de ferramentas no chat
  "chat.agent.maxRequests": 100 // Limite máximo de requisições simultâneas do agente de chat

}