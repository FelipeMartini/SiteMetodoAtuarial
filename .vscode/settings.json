{
  // Configurações de performance para projetos Next.js
  "terminal.integrated.cwd": "${workspaceFolder}/site-metodo",
  "files.exclude": {
    "**/node_modules": true,
    "**/.next": true,
    "**/build": true,
    "**/dist": true,
    "**/.git": true,
    "**/coverage": true
  },
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/.next/**": true,
    "**/build/**": true,
    "**/dist/**": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/.next": true,
    "**/build": true,
    "**/dist": true
  },
  "editor.minimap.enabled": false,
  "breadcrumbs.enabled": false,
  "typescript.suggest.autoImports": false,
  "chat.tools.autoApprove": true,
  "chat.agent.maxRequests": 100,
  "chat.agent.requestTimeout": 30000,
  "chat.agent.maxResponseTokens": 1000,
  "chat.agent.maxRetries": 3,
  "chat.agent.retryDelay": 1000,
  "chat.agent.enable": true,
  "chat.agent.model": "gpt-4",
  "chat.agent.temperature": 0.7,
  "chat.agent.topP": 0.9,
  "chat.agent.presencePenalty": 0.0,
  "chat.agent.frequencyPenalty": 0.0,
  "chat.agent.stopSequences": [
    "\n",
    "###"
  ],
  "chat.agent.systemMessage": "You are a helpful assistant for Next.js development.",
  "chat.agent.userMessage": "How can I assist you with your Next.js project today?",
  "chat.agent.assistantMessage": "Sure, I can help with that. What do you need assistance with in your Next.js project?",
  "chat.agent.enableCodeExecution": true,
  "chat.agent.codeExecutionTimeout": 5000,
  "chat.agent.codeExecutionMaxRetries": 2,
  "chat.agent.codeExecutionRetryDelay": 1000,
  "chat.agent.enableFileAccess": true,
  "chat.agent.fileAccessTimeout": 5000,
  "chat.agent.fileAccessMaxRetries": 2,
  "chat.agent.fileAccessRetryDelay": 1000,
  "chat.agent.enableFileEditing": true,
  "chat.agent.fileEditingTimeout": 5000,
  "chat.agent.fileEditingMaxRetries": 2,
  "chat.agent.fileEditingRetryDelay": 1000,
  "chat.agent.enableFileCreation": true,
  "chat.agent.fileCreationTimeout": 5000,
  "chat.agent.fileCreationMaxRetries": 2,
  "chat.agent.fileCreationRetryDelay": 1000,
  "chat.agent.enableFileDeletion": true,
  "chat.agent.fileDeletionTimeout": 5000,
  "chat.agent.fileDeletionMaxRetries": 2,
  "chat.agent.fileDeletionRetryDelay": 1000,
  "chat.agent.enableFileRenaming": true,
  "chat.agent.fileRenamingTimeout": 5000,
  "chat.agent.fileRenamingMaxRetries": 2,
  "chat.agent.fileRenamingRetryDelay": 1000,
  "chat.agent.enableFileListing": true,
  "chat.agent.fileListingTimeout": 5000,
  "chat.agent.fileListingMaxRetries": 2,
  "chat.agent.fileListingRetryDelay": 1000,
  "chat.agent.enableFileSearching": true,
  "typescript.disableAutomaticTypeAcquisition": true
}