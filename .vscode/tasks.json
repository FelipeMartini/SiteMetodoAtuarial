{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "Instalar dependências",
      "command": "npm install",
      "group": "build",
      "problemMatcher": [
        "$tsc"
      ],
      "options": {
        "cwd": "${workspaceFolder}/site-metodo"
      }
    },
    {
      "type": "shell",
      "label": "Atualizar dependências",
      "command": "npm update",
      "group": "build",
      "problemMatcher": [
        "$tsc"
      ],
      "options": {
        "cwd": "${workspaceFolder}/site-metodo"
      }
    },
    {
      "type": "shell",
      "label": "Lint Absoluto",
      "command": "npm run lint",
      "group": "test",
      "problemMatcher": ["$tsc"],
      "options": {
        "cwd": "${workspaceFolder}/site-metodo"
      }
    },
    {
      "type": "shell",
      "label": "Build Next.js Absoluto",
      "command": "npm run build",
      "group": "build",
      "problemMatcher": ["$tsc"],
      "options": {
        "cwd": "${workspaceFolder}/site-metodo"
      }
    },
    {
      "type": "shell",
      "label": "Type Check Absoluto",
      "command": "npm run type-check",
      "group": "test",
      "problemMatcher": ["$tsc"],
      "options": {
        "cwd": "${workspaceFolder}/site-metodo"
      }
    },
    {
      "type": "shell",
      "label": "Prisma Generate Absoluto",
      "command": "npm run prisma:generate",
      "group": "build",
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}/site-metodo"
      }
    },
    {
      "type": "shell",
      "label": "Iniciar Next.js",
      "command": "for porta in {3000..3010}; do fuser -k $porta/tcp; done; npm run dev",
      "group": "build",
      "isBackground": true,
      "problemMatcher": [
        "$tsc"
      ],
      "options": {
        "cwd": "${workspaceFolder}/site-metodo"
      }
    },
    {
      "type": "shell",
      "label": "Reiniciar Next.js",
      "command": "for porta in {3000..3010}; do fuser -k $porta/tcp; done; npm run dev",
      "group": "build",
      "isBackground": true,
      "problemMatcher": [
        "$tsc"
      ],
      "options": {
        "cwd": "${workspaceFolder}/site-metodo"
      }
    },
    {
      "type": "shell",
      "label": "Parar Next.js",
      "command": "for porta in {3000..3010}; do fuser -k $porta/tcp; done",
      "group": "build",
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}/site-metodo"
      }
    },
    {
      "type": "shell",
      "label": "Finalizar todas as instâncias Node.js",
      "command": "for porta in {3000..3010}; do fuser -k $porta/tcp; done",
      "group": "build",
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}/site-metodo"
      }
    },
    {
      "type": "shell",
      "label": "Finalizar servidores Next.js (portas 3000-3010)",
      "command": "for porta in {3000..3010}; do fuser -k $porta/tcp; done",
      "group": "build",
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}/site-metodo"
      }
    },
    {
      "type": "shell",
      "label": "Cobertura de Testes",
      "command": "npx jest --coverage",
      "group": "test",
      "problemMatcher": [
        "$tsc"
      ],
      "options": {
        "cwd": "${workspaceFolder}/site-metodo"
      }
    }
  ]
}